<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/signed_in_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/card_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="150dp"
                android:background="@color/White"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="bottom">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/your_stuff"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:textColor="@color/White"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/posts_icon"
                                android:layout_width="@dimen/profile_pic_width"
                                android:layout_height="@dimen/profile_pic_height"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/ic_action_posts"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/text_posts"
                                android:layout_weight="1"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="221"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textView_size_M"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/profile_pic_width"
                                android:layout_height="@dimen/profile_pic_height"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginBottom="8dp"
                                android:id="@+id/photos_icon"
                                android:background="@drawable/ic_action_photos" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Photos"
                                android:layout_weight="1"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:id="@+id/textView17" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="120"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textView_size_M"
                                android:layout_weight="1"
                                android:id="@+id/textView18" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/profile_pic_width"
                                android:layout_height="@dimen/profile_pic_height"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/ic_action_videos"
                                android:id="@+id/videos_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Videos"
                                android:layout_weight="1"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="48"
                                android:layout_weight="1"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textView_size_M"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/profile_pic_width"
                                android:layout_height="@dimen/profile_pic_height"
                                android:layout_weight="1"
                                android:text="@string/friends"
                                android:gravity="center"
                                android:background="@drawable/ic_action_friends"
                                android:id="@+id/friends_icon"
                                android:layout_marginBottom="8dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Friends"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1254"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textView_size_M"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/profile_pic_width"
                                android:layout_height="@dimen/profile_pic_height"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/groups_icon"
                                android:background="@drawable/ic_action_groups"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Groups"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="24"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textView_size_M"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/profile_pic_width_XXL"
                android:layout_height="@dimen/profile_pic_height_XXL"
                android:id="@+id/edit_profile_pic"
                android:layout_marginTop="70dp"
                android:background="@drawable/profile_border"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Craig Bachman"
                android:gravity="center"
                android:id="@+id/profile_name"
                android:textSize="28sp"
                android:textColor="#00548B"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/edit_profile_pic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member since 2016-07-02"
                android:gravity="center"
                android:id="@+id/ttt"
                android:textSize="16sp"
                android:layout_below="@+id/profile_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bethlehem, PA USA"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/ttt"/>
            <LinearLayout
                android:id="@+id/profile_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/activity_vertical_margin_S"
                android:layout_below="@+id/linearLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_M"
                    android:layout_marginTop="@dimen/activity_vertical_margin_S"
                    android:orientation="vertical">
                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_vertical_margin_VS"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="45"
                        android:progressDrawable="@drawable/progress_drawable_cyan"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/activity_vertical_margin_S"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.9">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center"
                                android:text="@string/text_profile_percentage"
                                android:textSize="@dimen/textView_size_M"
                                android:layout_gravity="center"
                                android:textColor="@color/Battleship_Gray"/>
                        </LinearLayout>
                        <Button
                            android:layout_weight="0"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:layout_width="@dimen/button_width_S"
                            android:layout_height="@dimen/button_height_M"
                            android:text="@string/update"
                            android:background="@drawable/bg_cyan_rounded"
                            android:textColor="@color/button_post_background"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_post"
                android:layout_below="@+id/profile_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_rounded_panel"
                    android:layout_margin="@dimen/activity_layout_margin_M"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/whats_on"
                        android:textColor="@color/Gray_Goose"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:textSize="@dimen/textView_size_header"
                        android:id="@+id/write_post"
                        android:paddingTop="@dimen/activity_vertical_margin_S"
                        android:paddingBottom="@dimen/activity_vertical_margin_S"
                        android:layout_weight="0.2"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Gray_Goose"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin_S"
                        android:layout_marginTop="@dimen/activity_horizontal_margin_S">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9">
                            <ImageView
                                android:id="@+id/camera_icon"
                                android:layout_width="@dimen/profile_pic_width"
                                android:layout_height="@dimen/profile_pic_height"
                                android:text="@string/camera"
                                android:layout_gravity="center"

                                android:background="@drawable/ic_action_camera"
                                />
                        </LinearLayout>

                        <Button
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:background="@drawable/bg_cyan_rounded_panel"
                            android:layout_width="@dimen/button_width_S"
                            android:layout_height="@dimen/button_height"
                            android:text="@string/text_post"
                            android:textStyle="normal"
                            android:textSize="@dimen/textView_size_M"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_posts"
                    android:textSize="24sp"
                    android:layout_margin="16dp" />

            </LinearLayout>
            <FrameLayout
                android:id="@+id/review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_post">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />
                <TextView
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/no_data_available" />
            </FrameLayout>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>