<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/profile_icon"
            android:layout_marginTop="8dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/profile_icon"
            android:gravity="center"
            android:textSize="50sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/profile_icon"
                android:text="Craig Bachman"
                android:textColor="#52c8f1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/somewhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/profile_icon"
                android:layout_weight="0.07"
                android:text="City, state, Country"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/vpi__bright_foreground_inverse_holo_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.0"
        android:orientation="vertical">
        <TextView
            android:id="@+id/add_frnds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_friend"
            android:layout_marginTop="8dp"
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="40sp"
             />
    </LinearLayout>


</LinearLayout>