<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageView_height_S" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_layout_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text="Journey to the cave city â€‘  Aurangabad "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/moreDetails"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height_M"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_cyan_rounded"
                    android:gravity="center"
                    android:text="@string/more_details"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_size_S" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin_M"
                android:layout_marginBottom="@dimen/activity_vertical_margin_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/textView_size_M"
                    android:layout_weight="0"
                    android:text="@string/price_starting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_VS"/>
                <TextView
                    android:textSize="@dimen/textView_size_M"
                    android:layout_weight="0"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/textView_size_M"
                    android:layout_weight="0"
                    android:text="@string/per_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_VS"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/include"
                android:textColor="@color/Gray_Wolf"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/flights_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_flights1"
                    android:gravity="center"
                    android:text="@string/flight"
                    android:textSize="@dimen/textView_size_S"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/hotels_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_hotels1"
                    android:gravity="center"
                    android:text="@string/hotels"
                    android:textSize="@dimen/textView_size_S" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/transport_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_transport"
                    android:gravity="center"
                    android:text="@string/transport"
                    android:textSize="@dimen/textView_size_S" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/meals_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_meals"
                    android:gravity="center"
                    android:text="@string/meals"
                    android:textSize="@dimen/textView_size_S" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>