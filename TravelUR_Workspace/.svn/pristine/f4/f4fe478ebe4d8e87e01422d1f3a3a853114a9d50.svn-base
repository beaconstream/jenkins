<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/popup_element"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_margin="@dimen/activity_layout_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/profile_pic_width_S"
                    android:layout_height="@dimen/profile_pic_height_S"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/activity_layout_margin_M"
                    android:background="@drawable/ic_action_close_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:text="@string/get_best_deals"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textView_size_M" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_s"
                    android:background="@color/Gray_Goose" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="@dimen/profile_pic_width_S"
                        android:layout_height="@dimen/profile_pic_height_S"
                        android:background="@drawable/rounded_textview"
                        android:gravity="center"
                        android:text="@string/phone"
                        android:textColor="@color/White"
                        android:textSize="@dimen/textView_size_M" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/no"
                        android:textColor="@color/textView_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_s"
                        android:layout_weight="0.4"
                        android:background="@color/Gray_Goose" />

                    <TextView
                        android:layout_width="@dimen/profile_pic_width_S"
                        android:layout_height="@dimen/profile_pic_height_S"
                        android:layout_weight="0"
                        android:background="@drawable/rounded_textview_white"
                        android:gravity="center"
                        android:text="@string/or"
                        android:textColor="@color/Gray_Wolf"
                        android:textSize="@dimen/textView_size_S" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_s"
                        android:layout_weight="0.4"
                        android:background="@color/Gray_Goose" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:gravity="center"
                    android:text="@string/customized_vacationpackage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_desc_yourName" />

                    <EditText
                        android:padding="@dimen/padding_S"
                        android:id="@+id/your_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:background="@drawable/bg_white_rounded_panel" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_desc_emailId" />

                    <EditText
                        android:id="@+id/email_id"
                        android:padding="@dimen/padding_S"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:background="@drawable/bg_white_rounded_panel" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_desc_mobileNo" />

                    <EditText
                        android:id="@+id/mobile_no"
                        android:padding="@dimen/padding_S"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:background="@drawable/bg_white_rounded_panel" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_desc_no_of_persons" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_rounded_panel">

                        <Spinner
                            android:id="@+id/country_code"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editText_height" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/activity_layout_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_desc_message" />

                    <EditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:padding="@dimen/padding_S"
                        android:layout_height="@dimen/editText_height_XXL"
                        android:gravity="start|top"
                        android:background="@drawable/bg_white_rounded_panel"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="@dimen/activity_layout_margin">

                <Button
                    android:id="@+id/update"
                    android:layout_width="@dimen/button_width_S"
                    android:layout_height="@dimen/button_height_M"
                    android:text="@string/button_submit"
                    android:textSize="@dimen/textView_size_S"
                    android:textColor="@color/White"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_L"
                    android:background="@drawable/bg_cyan_rounded_panel"/>
                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_s"
                android:background="@color/Gray_Goose" />
            <TextView
                android:layout_margin="@dimen/activity_layout_margin_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textView_color"
                android:textSize="@dimen/activity_horizontal_margin_M"
                android:gravity="center"
                android:text="@string/submitting_form"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>