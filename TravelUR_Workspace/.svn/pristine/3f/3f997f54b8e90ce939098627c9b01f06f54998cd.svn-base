<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tour_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageView_height_M" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_layout_margin">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="@dimen/textView_size"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_weight="0.6"
                    android:textSize="@dimen/textView_size_S"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21 days, 7 Continents: 1 Airline Ticket and Accommodation included"/>
                <Button
                    android:id="@+id/button_more_details"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_S"
                    android:layout_weight="0.4"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height_M"
                    android:background="@drawable/bg_cyan_rounded"
                    android:text="@string/more_details"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_size_S"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/win_ticket"
                        android:textSize="@dimen/textView_size_M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/quarterly_status"
                        android:textSize="@dimen/textView_size_M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:gravity="left|center"
                        android:drawablePadding="@dimen/activity_horizontal_margin_VS"
                        android:layout_weight="0.4"
                        android:textColor="@color/textView_color1"
                        android:textSize="@dimen/textView_size_S"
                        android:text="@string/new_friend"
                        android:drawableLeft="@drawable/ic_action_groups_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/count_friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/textView_size" />
                    <ImageView
                        android:id="@+id/checkmark1"
                        android:visibility="invisible"
                        android:background="@drawable/green_tick_icon"
                        android:layout_width="@dimen/profile_pic_width_S"
                        android:layout_height="@dimen/profile_pic_height_S" />
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/activity_vertical_margin_S"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_S"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_s"
                    android:background="@color/Gray_Cloud"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:drawablePadding="@dimen/activity_horizontal_margin_VS"
                        android:gravity="left|center"
                        android:layout_weight="0.4"
                        android:text="@string/make_bookings"
                        android:textColor="@color/textView_color1"
                        android:textSize="@dimen/textView_size_S"
                        android:drawableLeft="@drawable/ic_action_creditcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/total_transactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/textView_size" />
                    <ImageView
                        android:id="@+id/checkmark2"
                        android:visibility="invisible"
                        android:background="@drawable/green_tick_icon"
                        android:layout_width="@dimen/profile_pic_width_S"
                        android:layout_height="@dimen/profile_pic_height_S" />
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/activity_vertical_margin_S"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_S"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_s"
                    android:background="@color/Gray_Cloud"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:drawableLeft="@drawable/ic_action_profileicon"
                        android:drawablePadding="@dimen/activity_horizontal_margin_VS"
                        android:gravity="left|center"
                        android:text="@string/complete_profile"
                        android:textColor="@color/textView_color1"
                        android:textSize="@dimen/textView_size_S" />

                    <TextView
                        android:id="@+id/profile_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/textView_size" />

                    <ImageView
                        android:id="@+id/checkmark3"
                        android:layout_width="@dimen/profile_pic_width_S"
                        android:layout_height="@dimen/profile_pic_height_S"
                        android:background="@drawable/green_tick_icon"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/activity_vertical_margin_S"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_S"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_s"
                    android:background="@color/Gray_Cloud"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:drawablePadding="@dimen/activity_horizontal_margin_VS"
                        android:gravity="left|center"
                        android:layout_weight="0.4"
                        android:textColor="@color/textView_color1"
                        android:textSize="@dimen/textView_size_S"
                        android:text="@string/action_quarter_contributor"
                        android:drawableLeft="@drawable/ic_action_messages_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/count_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/textView_size" />
                    <ImageView
                        android:id="@+id/checkmark4"
                        android:visibility="invisible"
                        android:background="@drawable/green_tick_icon"
                        android:layout_width="@dimen/profile_pic_width_S"
                        android:layout_height="@dimen/profile_pic_height_S" />
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/activity_vertical_margin_S"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_S"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_s"
                    android:background="@color/Gray_Cloud"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>