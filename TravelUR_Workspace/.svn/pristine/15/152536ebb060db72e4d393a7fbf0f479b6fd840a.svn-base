<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen1_bg"
    android:baselineAligned="false"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/close"
        android:textColor="@color/textView_color"
        android:id="@+id/forgotPassword_close"
        android:textSize="@dimen/ttf"/>
    <LinearLayout
        android:id="@+id/forgotPassword_flipAround_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Forgot your password?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/title"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_L"
            android:layout_marginRight="@dimen/activity_horizontal_margin_L"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_L"
            android:layout_marginTop="@dimen/activity_vertical_margin_L"
            android:textColor="@color/title_color"
            android:id="@+id/forgotPassword_message" />
        <TextView
            android:text="@string/textView_forgetPassword_noWorry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textView_size_header"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_L"
            android:layout_marginRight="@dimen/activity_horizontal_margin_L"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/title_color"
            android:id="@+id/forgotPassword_noWorry_message" />
        <TextView
            android:text="@string/textView_forgetPassword_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textView_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_L"
            android:layout_marginRight="@dimen/activity_horizontal_margin_L"
            android:layout_marginBottom="@dimen/activity_vertical_margin_L"
            android:textColor="@color/title_color"
            android:id="@+id/forgotPassword_noWorry_desc_message" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/set_pwd_email_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/hint_emailAddress"
                android:ems="10"
                android:id="@+id/forgot_password_email"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:layout_margin="@dimen/activity_layout_margin"
                />
            <requestFocus />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:text="@string/button_sendNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgotpassword_send_now"
            android:textColor="@android:color/white"
            android:background="@drawable/button"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_L"
            android:layout_marginRight="@dimen/activity_horizontal_margin_L"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/buttonText_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:text="@string/textView_desc_newMemberSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/textView_size"
            android:id="@+id/forgotpassword_new_member"
            android:textColor="@color/textView_color"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:gravity="center|bottom"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

</LinearLayout>