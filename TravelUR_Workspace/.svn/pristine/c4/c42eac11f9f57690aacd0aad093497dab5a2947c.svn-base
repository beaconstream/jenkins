<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|bottom">
    <ImageView
        android:layout_width="@dimen/profile_pic_width_S"
        android:layout_height="@dimen/profile_pic_height_S"
        android:layout_gravity="end"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/ic_action_close_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin_L"
            android:gravity="center"
            android:text="@string/invite_friends"
           android:textColor="@color/Gray_Wolf"
            android:textSize="@dimen/textView_size" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_layout_margin"
            android:drawableLeft="@drawable/ic_action_email"
            android:hint="@string/enter_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seprate_multiple_emails"
            android:textColor="@color/Gray_Cloud"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height_M"
            android:layout_marginBottom="@dimen/activity_vertical_margin_L"
            android:background="@drawable/bg_cyan_rounded"
            android:text="@string/send_invite"
            android:textColor="@color/textView_color"/>

        <ImageView
            android:layout_width="@dimen/profile_pic_width_XXL"
            android:layout_height="@dimen/profile_pic_height_XXL"
            android:layout_marginBottom="@dimen/activity_vertical_margin_L"
            android:background="@drawable/travel_bag" />
    </LinearLayout>
</LinearLayout>