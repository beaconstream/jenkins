<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotel_bg">

    <TextView
        android:text="Where would you like to go?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_margin="42dp"
        android:gravity="center"
        android:textColor="#39c4f0"
        android:textSize="24sp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Destination"
            android:ems="10"
            android:id="@+id/destination"
            android:layout_margin="20dp"/>
        <requestFocus/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Length of stay"
            android:ems="10"
            android:id="@+id/length_of_stay"
            android:layout_margin="20dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Guests"
            android:ems="10"
            android:id="@+id/guests"
            android:layout_margin="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        >

        <Button
            android:text="FIND HOTELS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_hotels"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"

            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="#008000"
            />
    </LinearLayout>
</LinearLayout>